<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*:io.staminaframework.launcher</include>
                <include>*:org.apache.felix.framework</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>sys</outputDirectory>
            <directory>${project.build.directory}/sys-repo</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <lineEnding>unix</lineEnding>
            <directory>${project.basedir}/src/assembly/files/unix</directory>
            <filtered>true</filtered>
            <fileMode>0777</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <lineEnding>unix</lineEnding>
            <directory>${project.basedir}/src/assembly/files/shared</directory>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <outputDirectory>.</outputDirectory>
            <directory>${project.basedir}/..</directory>
            <lineEnding>unix</lineEnding>
            <includes>
                <include>LICENSE.txt</include>
                <include>NOTICE.txt</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
